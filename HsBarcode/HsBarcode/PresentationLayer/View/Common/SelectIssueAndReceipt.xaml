<UserControl x:Class="HsBarcode.PresentationLayer.View.Common.SelectIssueAndReceipt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:HsBarcode.PresentationLayer.View.Common"       
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="입고" Height="100" Background="#FF75777C" Margin="10,10,5,0" Command="{Binding Path=SelectCommand}" CommandParameter="1" />
        <Button Grid.Column="1" Content="출고" Height="100" Background="#FF75777C" Margin="5,10,10,0" Command="{Binding Path=SelectCommand}" CommandParameter="2" />
    </Grid>
</UserControl>
