                </DockPanel>
                <ComboBox  Grid.Row="0" Grid.Column="7">

                </ComboBox>
                <DockPanel Grid.Row="0" Grid.Column="8">
                    <materialDesign:PackIcon Kind="Circle"
                                                     DockPanel.Dock="Left" 
                                                     Width="10" Height="10"  
                                                     Foreground="Black" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left" 
                                                     />
                    <TextBlock Text="대표" FontSize="16" Foreground="Black" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </DockPanel>
                <ComboBox  Grid.Row="0" Grid.Column="9">

                </ComboBox>
                <DockPanel Grid.Row="1" Grid.Column="0">
                    <materialDesign:PackIcon Kind="Circle"
                                                     DockPanel.Dock="Left" 
                                                     Width="10" Height="10"  
                                                     Foreground="Black" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left" 
                                                     />
                    <TextBlock Text="등록일" FontSize="16" Foreground="Black" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </DockPanel>
                <ComboBox  Grid.Row="1" Grid.Column="1">

                </ComboBox>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="~" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox  Grid.Row="1" Grid.Column="3">

                </ComboBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" >
               
            </DataGrid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"  Background="Gray">
                    <Label Content="거래처 관리" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32*"/>
                            <ColumnDefinition Width="109*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Square"
                                                     Margin="3,22,0,0" 
                                                     Width="12" Height="12"  
                                                     Foreground="Black" 
                                                     VerticalAlignment="Top"
                                                     HorizontalAlignment="Left" 
                                                     />
                        <Label Content="회사명"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top"
                           Margin="15,15,0,0"/>
                        <TextBox HorizontalAlignment="Left"
                             Height="23"
