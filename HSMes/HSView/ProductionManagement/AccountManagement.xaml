                        <materialDesign:PackIcon Kind="Square"
                                                     Margin="3,69,0,0" 
                                                     Width="12" Height="12"  
                                                     Foreground="Black" 
                                                     VerticalAlignment="Top"
                                                     HorizontalAlignment="Left" 
                                                     />
