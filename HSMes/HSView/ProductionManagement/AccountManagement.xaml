                                                     Margin="3,108,0,0" 
                                                     Width="12" Height="12"  
                                                     Foreground="Black" 
                                                     VerticalAlignment="Top"
                                                     HorizontalAlignment="Left" 
                                                     />
                        <Label Content="담당자"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="15,61,0,0"/>
