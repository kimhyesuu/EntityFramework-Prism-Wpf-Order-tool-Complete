                              Height="23" TextWrapping="Wrap"
                              VerticalAlignment="Top" Width="120" 
                              Margin="41.2,101,0,0" IsReadOnly="True" Grid.Column="1"/>
                        <Label Content="Email"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="15,141,0,0"/>
                        <TextBox  HorizontalAlignment="Left"
                              Height="23" TextWrapping="Wrap"
                              VerticalAlignment="Top" Width="120" 
                              Margin="41.2,141,0,0" IsReadOnly="True" Grid.Column="1"/>
                        <Label Content="주소"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="15,181,0,0"/>
                        <TextBox  HorizontalAlignment="Left"
                              Height="23" TextWrapping="Wrap"
                              VerticalAlignment="Top" Width="120" 
                              Margin="41.2,181,0,0" IsReadOnly="True" Grid.Column="1"/>

                        <Label Content="등급"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="15,221,0,0"/>
                        <TextBox  HorizontalAlignment="Left"
                              Height="23" TextWrapping="Wrap"
                              VerticalAlignment="Top" Width="120" 
                              Margin="41.2,221,0,0" IsReadOnly="True" Grid.Column="1"/>

                        <Label Content="특징"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="15,261,0,0"/>
                        <TextBox  HorizontalAlignment="Left"
                              Height="23" TextWrapping="Wrap"
                              VerticalAlignment="Top" Width="120" 
                              Margin="41.2,261,0,0" IsReadOnly="True" Grid.Column="1"/>

                        <Label Content="거래내역"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                              Margin="15,300,0,0" Grid.ColumnSpan="2"/>

                        <Button HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom"
                             Margin="0,0,10,15"
                            Width="80" Content="확정" Background="#FF5A575D" Grid.Column="1"/>

                    </Grid>

                </Grid>
            </Grid>
                          
        </Grid>
    </Grid>
</UserControl>
