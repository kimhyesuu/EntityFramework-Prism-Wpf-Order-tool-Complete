                    </DockPanel>
                    <ComboBox Grid.Row="1"  Grid.Column="8">

                    </ComboBox>

                    <DockPanel Grid.Row="2" Grid.Column="0">
                        <materialDesign:PackIcon Kind="Circle"
                                                     DockPanel.Dock="Left" 
                                                     Width="24" Height="10"    
                                                     Foreground="Black" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left" 
                                                     />
