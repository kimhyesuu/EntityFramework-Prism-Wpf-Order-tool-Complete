                    <ComboBox Grid.Row="1" Grid.Column="3">

                    </ComboBox>
                    <DockPanel Grid.Row="1" Grid.Column="4">
                        <materialDesign:PackIcon Kind="Circle" Margin="12,13,12,12.2"
                                                     DockPanel.Dock="Left" 
