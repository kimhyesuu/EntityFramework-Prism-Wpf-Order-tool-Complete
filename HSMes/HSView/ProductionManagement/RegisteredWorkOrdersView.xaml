                                   DockPanel.Dock="Right" 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center" Margin="0,6,0,6.4" Width="47"/>
                    </DockPanel>
                    <ComboBox  Grid.Row="2" Grid.Column="1">

                    </ComboBox>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Background="#FF9AD73C" 
                            
                            BorderBrush="{x:Null}" Margin="10,2,2,2" 
                            Width="100" Height="100"
                            Command="{Binding Path=OpenWorkOrdersDlgCommand}">
                        <DockPanel>
                            <materialDesign:PackIcon Kind="TicketConfirmationOutline"
                                                     DockPanel.Dock="Top" 
                                                     Width="45" Height="45"  
                                                     Foreground="Black" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left" 
                                                     />
                            <TextBlock Text="확정" FontSize="16"
                                       Margin="7" Foreground="Black" 
                                       DockPanel.Dock="Bottom" 
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
