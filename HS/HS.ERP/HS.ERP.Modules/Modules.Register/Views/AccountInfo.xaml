<UserControl x:Class="HS.ERP.Outlook.Core.Dialogs.Views.AccountInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:core="clr-namespace:HS.ERP.Core;assembly=HS.ERP.Core"
            >
    <ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" >
            <GroupBox Header="거래처 정보" >
                <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.RegisteredAccountListRegion}"/>
            </GroupBox>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Command="{Binding Path=MoveAccountInfoCommand}" Margin="5" Width="70" Background="DeepSkyBlue" BorderBrush="{x:Null}">
                    <materialDesign:PackIcon Kind="ArrowRightBold" Foreground="Black"/>
                </Button>
                <Button Command="{Binding Path=SaveAccountInfoCommand}" Margin="5" Width="70" Background="DeepSkyBlue" BorderBrush="{x:Null}">
                    <materialDesign:PackIcon Kind="ArrowLeftBold" Foreground="Black"/>
                </Button>
            </StackPanel>
            <GroupBox Header="정보 입력" >
                <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.RegisterAccountRegion}"/>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
